{
  "include": ["./src/**.ts*"],
  "exclude": ["../node_modules/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  }
}
