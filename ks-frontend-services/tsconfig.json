{
  "include": ["./src/**.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
